<h2>Contact me</h2>
<div class="isSent">
    {{#if isSent}}
        The message has been sent!<br>
        File {{file}} has been saved
    {{/if}}
</div>
<div class="isError">
    {{#if isError}}
        You can't leave fields empty!
    {{/if}}
</div>
<form action="/contact/send-message" method="POST" enctype="multipart/form-data" accept=".png, .jpg, .jpeg, .gif">
    <label>
        Your name: <input type="text" name="author">
    </label>
    <label>
        Your email: <input type="email" name="sender">
    </label>
    <label>
        Title: <input type="text" name="title">
    </label>
    <label>
        Project design: <input type="file" name="file">
    </label>
    <label>
        Message: <textarea name="message"></textarea>
    </label>
    <button type="submit">Send message</button>
</form>